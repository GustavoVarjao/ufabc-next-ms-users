{
  "extends": [
    "@rocketseat/eslint-config/node",
    "plugin:vitest-globals/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-type-checked"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "**/tsconfig.json"
    ]
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "root": true,
  "env": {
    "vitest-globals/env": "true"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": true
      },
    ],
    "import/no-default-export": "error",
    "no-redeclare": "off",
    "no-void": "off"
  },
  "overrides": [
    {
      "files": [
        "src/plugins/**/*",
        "src/routes/**"
      ],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}
